<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Annotation Sharing Loader -->
        <service id="fxp_security.sharing_loader.annotation"
                 class="Fxp\Component\Security\Sharing\Loader\AnnotationLoader"
                 public="false">
            <tag name="fxp_security.sharing_loader" />
            <argument type="service" id="annotations.reader"/>
            <argument type="service" id="fxp_security.class_finder"/>
        </service>
    </services>
</container>
